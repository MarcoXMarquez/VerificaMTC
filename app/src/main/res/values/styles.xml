<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo base -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Estilo para tarjeta -->
    <style name="CreditCardTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item> <!-- Alternativa temporal -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#B3FFFFFF</item> <!-- Valor directo -->
    </style>

    <!-- Estilo para errores -->
    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item> <!-- Usando tu color existente -->
        <item name="android:textSize">12sp</item>
    </style>
</resources>