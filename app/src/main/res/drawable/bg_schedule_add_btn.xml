<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFA940"/>
            <corners android:radius="24dp"/>
            <elevation android:elevation="6dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFB86C"
                android:endColor="#FF9B29"
                android:angle="90" />
            <corners android:radius="24dp"/>
            <elevation android:elevation="3dp"/>
        </shape>
    </item>
</selector>
