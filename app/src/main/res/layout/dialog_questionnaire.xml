<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Pregunta 1 -->
        <TextView android:text="Pregunta 1"
            android:id="@+id/question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioGroup android:id="@+id/group1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:text="1" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:text="2" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:text="3" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:text="4" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:text="5" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- Pregunta 2 -->
        <TextView android:text="Pregunta 2"
            android:id="@+id/question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioGroup android:id="@+id/group2"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:text="1" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:text="2" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:text="3" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:text="4" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:text="5" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- Pregunta 3 -->
        <TextView android:text="Pregunta 3"
            android:id="@+id/question3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioGroup android:id="@+id/group3"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:text="1" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:text="2" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:text="3" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:text="4" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:text="5" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

    </LinearLayout>
</ScrollView>
