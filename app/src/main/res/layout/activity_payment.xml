<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título -->
            <TextView
                android:id="@+id/title_payment_methods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccione su método de pago:"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <!-- Opciones de pago -->
            <LinearLayout
                android:id="@+id/payment_options_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Tarjeta Visa -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_visa"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_visa"
                            android:layout_width="42dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_visa" />

                        <TextView
                            android:id="@+id/tv_visa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="VISA"
                            android:textColor="@color/text_primary"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Efectivo -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_cash"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_cash"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_cash" />

                        <TextView
                            android:id="@+id/tv_cash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="EFECTIVO"
                            android:textColor="@color/text_primary"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Formulario Visa -->
            <RelativeLayout
                android:id="@+id/visa_form_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <!-- Tarjeta interactiva -->
                <RelativeLayout
                    android:id="@+id/credit_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/visa_card_background"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/et_card_number"
                        style="@style/CreditCardTextAppearance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:hint="XXXX XXXX XXXX XXXX"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/et_card_holder"
                        style="@style/CreditCardTextAppearance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="40dp"
                        android:hint="NOMBRE DEL TITULAR" />

                    <EditText
                        android:id="@+id/et_card_expiry"
                        style="@style/CreditCardTextAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:hint="MM/AA"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/et_card_cvv"
                        style="@style/CreditCardTextAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="80dp"
                        android:layout_marginBottom="20dp"
                        android:hint="CVV"
                        android:inputType="numberPassword" />
                </RelativeLayout>

                <!-- Botón de confirmación -->
                <Button
                    android:id="@+id/btn_confirm_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/credit_card_view"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:text="CONFIRMAR PAGO"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>