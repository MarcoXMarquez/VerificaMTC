<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_background_2"
    android:paddingTop="72dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Nuevo Horario"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/admin_text"
        android:fontFamily="sans-serif"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- Campo Fecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_rounded"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_calendar"
            app:tint="@color/admin_icon" />
        <EditText
            android:id="@+id/etFecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Fecha (YYYY-MM-DD)"
            android:textColor="@color/admin_text_2"
            android:textColorHint="@color/admin_hint"
            android:paddingStart="12dp"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Campo Hora -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_rounded"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_clock"
            android:tint="@color/admin_icon" />
        <EditText
            android:id="@+id/etHora"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Hora (HH:MM)"
            android:inputType="time"
            android:textColor="@color/admin_text_2"
            android:textColorHint="@color/admin_hint"
            android:paddingStart="12dp"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnSaveSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/admin_button"
        android:textColor="@color/admin_button"
        android:text="Guardar"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:textSize="17sp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/bg_btn_rounded"/>
</LinearLayout>
