<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- DNI del usuario -->
    <TextView
        android:id="@+id/tvUserId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <!-- Contenedor de indicadores -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Indicador de Pago -->
        <ImageView
            android:id="@+id/ivPayment"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Estado de pago"/>

        <!-- Indicador de Examen Escrito -->
        <ImageView
            android:id="@+id/ivWrittenExam"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Estado examen escrito"/>

        <!-- Indicador de Examen Manejo -->
        <ImageView
            android:id="@+id/ivDrivingExam"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Estado examen manejo"/>
    </LinearLayout>
</LinearLayout>