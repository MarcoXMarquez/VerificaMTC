<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_background_2"
    android:paddingTop="40dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestión de Horarios"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/admin_text"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- Lista de horarios -->
    <ListView
        android:id="@+id/scheduleListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="12dp"
        android:paddingBottom="12dp"
        android:scrollbars="none"/>

    <!-- Botón inferior grande -->
    <Button
        android:id="@+id/btnAddSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_schedule_btn_orange"
        android:textColor="@color/schedule_button_text"
        android:text="Agregar Horario"
        android:layout_marginTop="16dp"/>
</LinearLayout>
